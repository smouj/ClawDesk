{
  "configVersion": 3,
  "app": {
    "host": "127.0.0.1",
    "port": 4178
  },
  "profiles": {
    "local": {
      "name": "local",
      "bind": "127.0.0.1",
      "port": 18789,
      "token_path": "~/.config/openclaw/gateway.auth.token",
      "auth": {
        "token": ""
      }
    }
  },
  "activeProfile": "local",
  "security": {
    "allow_actions": [
      "gateway.status",
      "gateway.logs",
      "gateway.probe",
      "gateway.dashboard",
      "gateway.start",
      "gateway.stop",
      "gateway.restart",
      "profiles.read",
      "profiles.activate",
      "profiles.write",
      "profiles.delete",
      "macros.read",
      "macros.run",
      "macros.write",
      "usage.read",
      "usage.export",
      "events.read"
    ],
    "enableRemoteProfiles": false,
    "allowedRemoteHosts": [],
    "allowedOrigins": []
  },
  "macros": {
    "pulse": {
      "description": "Status + usage snapshot",
      "steps": [{ "action": "gateway.status" }, { "action": "usage.read" }]
    }
  },
  "observability": {
    "log_poll_ms": 1500,
    "backoff_max_ms": 8000
  }
}
